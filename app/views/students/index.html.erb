<h1>Listing students</h1>
<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr class="success">
      <th>Name</th>
      <th>Sex</th>
      <th>English</th>
      <th>Khmer</th>
      <th>Math</th>
      <th>Img</th>
      <th>Movice</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
     

    </tr>
  </thead>

  <tbody>
  </div>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.sex %></td>
        <td><%= student.english %></td>
        <td><%= student.khmer %></td>
        <td><%= student.math %></td>
        <td><%= image_tag student.img,size: "30x50" %></td>
        <td><%= student.movice.try(:html_safe) %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Student', new_student_path, class: "btn btn-success btn-lg active" %>

